{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}
