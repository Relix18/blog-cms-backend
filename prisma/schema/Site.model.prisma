model SiteSettings {
  id                   String   @id @default(cuid())
  siteName             String
  logoUrl              String? 
  logoUrlId            String? 
  accentColor          String?  
  heroTitle            String
  heroDescription      String
  heroImageUrl         String? 
  heroImageUrlId       String? 
  gradientStart        String  
  gradientEnd          String  
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
}